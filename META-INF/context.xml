<?xml version="1.0" encoding="UTF-8"?>

<Context path="/plutus"
         docBase="plutus"
         debug="5"
         reloadable="false"
         crossContext="true">
    <Resource name="jdbc/plutus"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              initialSize="100"
              maxActive="150"
              maxIdle="50"
              maxWait="180"
              username="root"
              password=""
              driverClassName="com.mysql.jdbc.Driver"
              validationQuery="/* ping */ SELECT 1"
              removeAbandoned="true"
              removeAbandonedTimeout="300"
              testOnBorrow="true"
              logAbandoned="true"
              abandonWhenPercentageFull="50"
              url="jdbc:mysql://localhost:3306?useCursorFetch=true&amp;defaultFetchSize=1000&amp;dumpQueriesOnException=true&amp;useUnicode=true&amp;characterEncoding=UTF-8"/>
</Context>